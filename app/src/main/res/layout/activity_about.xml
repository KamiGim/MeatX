<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="th.ac.ku.madlab.beefx.AboutActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="MeatX"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        tools:context=".A"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="      MeatX is developed by Mr.Supab Saelim and Mr.Sukol Khaibundit under supervision of Associate Professor Dr. Punpiti Piamsa-Nga with help from Faculty of Agriculture, Department of Animal Husbandry.
        \r\n        It's a senior project of CPE from Kasetsart university where developers study.
        \r\n        If you have a problem about this application,you can send me an e-mail at supab.s@ku.th"
        android:layout_margin="20dp"/>

</LinearLayout>